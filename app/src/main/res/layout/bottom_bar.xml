<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/tab_bxxc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tab_bxxc_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:clickable="false"
                android:src="@drawable/main_unselected"
            />
            <TextView
                android:id="@+id/tab_bxxc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:clickable="false"
                android:text="首页"
                android:textColor="@color/gray" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_schedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_schedule_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:clickable="false"
                android:src="@drawable/class_unselect" />

            <TextView
                android:id="@+id/tab_schedule_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:clickable="false"
                android:text="课表"
                android:textColor="@color/gray" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_personal_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:clickable="false"
                android:src="@drawable/me_unselect" />

            <TextView
                android:id="@+id/tab_personal_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:clickable="false"
                android:text="我的"
                android:textColor="@color/gray" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>