<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:weightSum="1">
    <!-- ViewPage轮播图设置 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewPage"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bxhead"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/bxhead"
            android:padding="10dp"
        />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/background"/>
        <com.jgkj.bxxccoach.tools.AutoTextView
            android:id="@+id/headlines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="科技改变生活，百信引领学车!科技改变生活，百信引领学车!科技改变生活，百信引领学车!科
技改变生活，百信引领学车!科技改变生活，百信引领学车!"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/about_car"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="约车学员"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:background="#d95f5f"

        />
        <TextView
            android:id="@+id/evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学员评价"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:background="#d95f5f"
            android:padding="5dp"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/sure_about_car"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="确定约车"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:background="#d95f5f"
        />
        <TextView
            android:id="@+id/kefu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="#d95f5f"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/myAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="我的账户"
        android:textSize="30sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d9c0c0"
    />


</LinearLayout>
