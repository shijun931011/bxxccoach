<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/linearlayout_shape_background"
    >
        <TextView
            android:id="@+id/withdraw_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017年06月03日"
            android:padding="5dp"
            android:gravity="center"
        />
        <View android:layout_width="match_parent"
              android:layout_height="0.1dp"
              android:background="@color/background"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:orientation="horizontal">
            <TextView
                android:id="@+id/withdraw_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提现"
            />
            <TextView
                android:id="@+id/withdraw_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="90.00"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:orientation="horizontal">
            <TextView
                android:id="@+id/state_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="状态"
            />
            <TextView
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="提现审核中..."
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/withdraw_go"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="学时费"
            />
            <TextView
                android:id="@+id/withdraw_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="(尾号：)"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>