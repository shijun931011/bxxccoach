<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include
        android:id="@+id/title"
        layout="@layout/title"/>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeColor">
        <LinearLayout
            android:id="@+id/today_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <com.jgkj.bxxccoach.tools.DashboardView
                android:id="@+id/dashboard_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/today_money"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="right"
                android:text="账户余额:"/>
            <TextView
                android:id="@+id/myAccount_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="0元"/>
        </LinearLayout>

    </RelativeLayout>
    <RadioGroup
        android:id="@+id/radio"
        style="@style/RadioButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/layout1"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/btn_income_record"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textColor="@color/redTheme"
            android:drawablePadding="3dp"
            android:background="@drawable/bg_selector"
            android:gravity="center"
            android:text="进账记录"/>

        <RadioButton
            android:id="@+id/btn_withdrawal_record"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColor="@color/right_bg"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="提现记录"/>
    </RadioGroup>

    <ListView android:id="@+id/listView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:divider="@null"
              android:layout_below="@id/radio"
    />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="暂无记录..."
        android:textSize="15sp"
        android:visibility="gone"
    />
    <Button
        android:id="@+id/btn_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bule"
        android:layout_alignParentBottom="true"
        android:text="申请提现"
        android:textSize="15sp"
        android:padding="15dp"
        android:textColor="@color/white"/>
</RelativeLayout>
